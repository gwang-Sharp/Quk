
@{
    ViewBag.Title = "成员分配";
    Layout = "~/Views/Shared/_LayoutPhone.cshtml";
    var departs = ViewBag.DepartMents;
}
<link rel="stylesheet" href="https://cdn.bootcss.com/weui/1.1.3/style/weui.min.css">
<link rel="stylesheet" href="https://cdn.bootcss.com/jquery-weui/1.2.1/css/jquery-weui.min.css">

<div id="container" style="margin:10px 20px;">
    <el-button size="small" @@click="goback" v-html="'返回'"></el-button>
    <div class="weui-cells" id="depart">
        <div style="margin-top:0px" v-for="item in myDeparts" v-on:click="GetDepart(item.id)">
            <div class="weui-cell__hd"><img src=""></div>
            <a class="weui-cell weui-cell_access" href="javascript:;" v-bind:DepartID="item.id">
                <div class="weui-cell__bd">
                    <p v-html="item.name"></p>
                </div>
                <div class="weui-cell__ft">
                </div>
            </a>
        </div>
    </div>
    <div class="weui-cells weui-cells_checkbox" id="members" style="display:none;">
        <div v-for="(item,index) in MYmembers">
            <label class="weui-cell weui-check__label" v-bind:for="index">
                <div class="weui-cell__hd">
                    <input type="checkbox" name="checkbox1" class="weui-check" @@click="FilterMember(item)" v-bind:id="index" v-bind:checked="item.checked" v-model="item.checked">
                    <i class="weui-icon-checked"></i>
                </div>
                <div class="weui-cell__bd">
                    <p v-html="item.name"></p>
                </div>
            </label>
        </div>
    </div>
    <div style="margin:0px auto;width:70px;margin-top:100px;display:none" id="addLog"><el-button type="primary" v-on:click="ChooseMember" v-html="'提交'"></el-button></div>
    <div style="display:none;">
        <input value="@departs" id="DataStore" hidden="hidden" />
    </div>
</div>
@Scripts.Render("~/bundles/AddressBooks?v="+DateTime.Now.Millisecond)
<!-- body 最后 -->
<script src="~/Scripts/jquery-weui.min.js"></script>